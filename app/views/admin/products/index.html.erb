<% if can? :create, Product %>
  <%= link_to t(".new"), new_admin_product_path, class: "btn btn-danger mb-3" %>
<% end %>
<%= search_form_for [:admin, @q] do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label t ".name" %>
      <%= f.search_field :name_cont, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= f.label t ".category" %>
      <%= f.select :category_eq, Category.pluck(:name, :id).unshift([t("all"), -1]), {}, {class: "select-category d-none"} %>
    </div>
    <div class="form-group col-md-2">
      <%= f.label t ".quantity" %>
      <%= f.number_field :product_attributes_quantity_gteq %>
      <%= f.number_field :product_attributes_quantity_lteq %>
    </div>
  </div>
  <%= f.submit t("seach"), class: "btn btn-primary" %>
<% end %>
<table class="table align-middle mb-0 bg-white table-product">
  <thead class="bg-light">
    <tr>
      <th><%= sort_link(@q, :name, t(".name")) %></th>
      <th><%= sort_link(@q, :category_name, t(".category")) %></th>
      <th><%= t ".quantity" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @products.present? %>
      <%= render @products %>
      <%== pagy_bootstrap_nav @pagy %>
    <% else %>
      <tr>
        <td class="text-center" colspan="4">
          <%= t "empty" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
